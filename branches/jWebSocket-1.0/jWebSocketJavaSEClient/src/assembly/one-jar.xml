<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<!-- this id is appended to filename given in pom.xml -->
	<id>Bundle-${project.version}</id>
	<formats>
		<format>jar</format>
	</formats>
	
	<includeBaseDirectory>false</includeBaseDirectory>
	
	<dependencySets>
		
		<dependencySet>
			<outputDirectory/>
			<includes>
				<include>${groupId}:${artifactId}</include>
				
				<include>log4j:log4j</include>
				<include>org.springframework:spring-core</include>
				<include>org.fusesource:sigar</include>
				<include>javolution:javolution</include>
				<include>com.fasterxml.jackson.core:jackson-databind</include>
				<include>org.netbeans.external:json-2</include>
				<include>commons-codec:commons-codec</include>
				<include>org.apache.commons:commons-compress</include>
				<include>commons-io:commons-io</include>
				<include>org.apache.activemq:activemq-all</include>
				<include>org.apache.ddlutils:ddlutils</include>
				<include>com.healthmarketscience.common:common-util</include>
				<!--jWebSocket Dependencies-->
				<include>org.jwebsocket:jWebSocketCommon</include>
				<include>org.jwebsocket:jWebSocketClientAPI</include>
			</includes>
			<unpack>true</unpack>
		</dependencySet>		
	</dependencySets>
</assembly>