<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd"> 
<beans>
	<!-- settings  for the mail plug-in -->
	<bean id="org.jwebsocket.plugins.cluster.settings" class="org.jwebsocket.plugins.cluster.Settings">
		<property name="brokerURI" value="failover:(tcp://0.0.0.0:61616,tcp://127.0.0.1:61616)?initialReconnectDelay=100"/>
		<property name="clusterTopic" value="org.jwebsocket.cluster"/>
		<property name="advisoryTopic" value="ActiveMQ.Advisory.Consumer.Topic.org.jwebsocket.cluster"/>

		<!-- use id for this node in the cluster -->
		<property name="nodeId" value="n1"/>
	</bean>

</beans>