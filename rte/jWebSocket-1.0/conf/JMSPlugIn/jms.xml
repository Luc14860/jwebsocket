<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:amq="http://activemq.apache.org/schema/core" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd 
		http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- an embedded broker -->
	<!-- bean id="broker" class="org.apache.activemq.xbean.BrokerFactoryBean">
		<property name="config" value="file:conf/activemq.xml" />
	</bean-->

	<!-- JMS ConnectionFactory to use -->
	<bean id="amqFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
		<property name="brokerURL" value="tcp://0.0.0.0:61616" />
		<property name="useAsyncSend" value="true" />
	</bean>

	<bean id="connectionFactory"
		  class="org.springframework.jms.connection.SingleConnectionFactory">
		<property name="targetConnectionFactory" ref="amqFactory" />
	</bean>

	<!-- amq:broker useJmx="false" persistent="false"> <amq:transportConnectors> 
	<amq:transportConnector uri="tcp://localhost:61616" /> </amq:transportConnectors> 
	</amq:broker> <amq:connectionFactory id="connectionFactory" brokerURL="vm://localhost?broker.persistent=false" 
	useAsyncSend="true" / -->
	<amq:queue id="testQueue" physicalName="test.queue" />
	<amq:topic id="testTopic" physicalName="test.topic" />
	<amq:topic id="stockTopic" physicalName="stock.topic" />

	<!-- the jWebSocket-to-JMS topic -->
	<amq:topic id="jws2jmsTopic" physicalName="org.jwebsocket.jws2jms" />
	<!-- the JMS-to-jWebSocket topic -->
	<amq:topic id="jms2jwsTopic" physicalName="org.jwebsocket.jms2jws" />
	
	<!-- this is the JMS Bridge Listener -->
	<bean id="jms2jwsListener" class="org.jwebsocket.plugins.jms.bridge.JMSListener" />
	<!-- this is the MQ topic to receive messages from the JMS system -->
	<bean id="jms2jwsDestination" class="org.apache.activemq.command.ActiveMQTopic">
		<constructor-arg value="org.jwebsocket.jms2jws"/>
	</bean>
	<!-- and this is the message listener container -->
	<bean id="jms2jwsListenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="connectionFactory"/>
		<property name="destination" ref="jms2jwsDestination"/>
		<property name="messageListener" ref="jms2jwsListener" />
	</bean>
	
	<!-- this is the JMS Advisory Listener for the jws2jms topic -->
	<bean id="advisoryListener" class="org.jwebsocket.plugins.jms.bridge.JMSAdvisoryListener" />
	<!-- this is the MQ topic to receive messages from the JMS system -->
	<bean id="advisoryDestination" class="org.apache.activemq.command.ActiveMQTopic">
		<constructor-arg value="ActiveMQ.Advisory.Consumer.Topic.org.jwebsocket.jws2jms"/>
		<!-- <constructor-arg value="ActiveMQ.Advisory.Connection"/> -->
		
	</bean>
	<!-- and this is the message listener container -->
	<bean id="advisoryListenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="connectionFactory"/>
		<property name="destination" ref="advisoryDestination"/>
		<property name="messageListener" ref="advisoryListener" />
	</bean>

</beans>
