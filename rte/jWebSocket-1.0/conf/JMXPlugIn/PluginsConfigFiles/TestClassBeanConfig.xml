<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
      "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean id="TestClass" class="org.jwebsocket.plugins.jmx.configDefinition.JMXDefinition">
       <property name="description" value="Probando la carga del xml"/>
       <property name="className" value="cu.uci.testjmx.plugins.TestClass"/>
       <property name="jarName" value="jTestJMX-1.0.jar"/>
       <property name="attributes">
           <set>
               <bean id="messageAttribute" class="org.jwebsocket.plugins.jmx.configDefinition.AttributeDefinition">
					<!--<constructor-arg type="java.lang.Class" value="java.lang.Integer"/>
					<constructor-arg type="java.lang.String" value="message"/>
					<constructor-arg index="2" value="Un atributo de prueba"/>
					<constructor-arg index="3" value="true"/>
					<constructor-arg index="4" value="true"/>
					<constructor-arg index="5" value="false"/>-->
                   <property name="name" value="message"/>
                   <property name="type" value="java.lang.Integer"/>
                   <property name="readable" value="true"/>
                   <property name="writable" value="true"/>
                   <property name="description" value="Un atributo de prueba"/>
                   <property name="isBoolean" value="false"/>
               </bean>
           </set>
       </property>
       <property name="operations">
           <set>
               <bean id="sayHello" class="org.jwebsocket.plugins.jmx.configDefinition.OperationDefinition">
                   <property name="name" value="sayHello"/>
                   <property name="impact" value="INFO"/>
                   
                   <property name="description" value="Una operacion de prueba"/>
                   <property name="parameters">
					<set>
						<bean id="operationParameters" class="org.jwebsocket.plugins.jmx.configDefinition.ParameterDefinition">
							<property name ="name" value="a"/>
							<property name ="description" value="un mensaje"/>
							<property name ="type" value="java.lang.String"/>
						</bean>
					</set>
                   </property>
               </bean>
           </set>
       </property>
       <property name="constructors">
			<set>
               <bean id="classConstructor" class="org.jwebsocket.plugins.jmx.configDefinition.ConstructorDefinition">
					<property name="name" value="TestClass"/>
					<property name="description" value="Constructor de la clase"/>
					<property name="parameters">
					<set>
						<bean id="messageParameters" class="org.jwebsocket.plugins.jmx.configDefinition.ConstuctorParameterDefinition">
							<constructor-arg index="0">
								<bean id="messageValue" class="java.lang.Integer">
									<constructor-arg index="0" value="10"/>
								</bean>
							</constructor-arg>
							<constructor-arg index="1" value="aMessage"/>
							<constructor-arg index="2" value="un mensaje"/>
							
							<!--<property name ="name" value="aMessage"/>
							<property name ="description" value="un mensaje"/>
							<property name="value">
								<bean id="messageValue" class="java.lang.Integer">
									<constructor-arg index="0" value=""/>
								</bean>
							</property>-->
						</bean>
					</set>
                   </property>
               </bean>
           </set>
       </property>
	   <property name="notifications">
			<set>
               <bean id="setNotification" class="org.jwebsocket.plugins.jmx.configDefinition.NotificationDefinition">
                   <property name="types">
                       <set>
                           <value>testClass.set.message</value>
                       </set>    
                   </property>
                   <property name="name" value="MessageSet"/>
                   <property name="description" value="Notification when the getMessage method is invoke"/>
               </bean>
           </set>
       </property>
    </bean>    
</beans>
