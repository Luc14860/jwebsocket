<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" " http://www.springframework.org/dtd/spring-beans.dtd"> 
<beans>	
	
	<!-- CAUTION! SECURITY ADVISE!
			please take care that the following settings do not get
			disclosed to anybody. Publishing this data will allow
			others to use your SMS account on behalf of you which may 
			lead to spam attacks and costs!
	-->

	<!-- this is the configuration for the provider "SMSTrade" -->
	<bean id="providerSmstrade" class="org.jwebsocket.plugins.sms.ProviderSmstrade">
		<property name="key" value="#your key at SMSTrade#"/>
	</bean>

	<!-- general SMS plug-in settings -->
	<bean id="org.jwebsocket.plugins.sms.settings" class="org.jwebsocket.plugins.sms.Settings">
		<property name="provider" ref="providerSmstrade"/>
		<property name="collectionName" value="org.jwebsocket.plugins.sms"/>
		<property name="collectionAccessPassword" value="root"/>
		<property name="collectionSecretPassword" value="root"/>
		<property name="itemDefinition" ref="SMSItemDefinition" />
	</bean>
	
	<!-- SMS item definition for item storage -->
	<bean class="org.jwebsocket.plugins.itemstorage.item.ItemDefinition">
		<property name="type" value="org.jwebsocket.plugins.sms.SMS"/>
		<property name="primaryKeyAttribute" value="id" />
		<property name="attributeTypes">
			<map>
				<entry key="time" value="long" />
				<entry key="length" value="integer" />
				<entry key="message">
					<bean class="org.jwebsocket.enterprise.plugins.itemstorage.item.MapAttributeDef" factory-method="generateDef">
						<constructor-arg index="0" value="string" />
						<constructor-arg index="1">
							<map>
								<entry key="required">
									<bean class="java.lang.Boolean">
										<constructor-arg index="0" value="true" />
									</bean>
								</entry>
							</map>
						</constructor-arg>
					</bean>
				</entry>
				<entry key="from">
					<bean class="org.jwebsocket.enterprise.plugins.itemstorage.item.MapAttributeDef" factory-method="generateDef">
						<constructor-arg index="0" value="string" />
						<constructor-arg index="1">
							<map>
								<entry key="required">
									<bean class="java.lang.Boolean">
										<constructor-arg index="0" value="true" />
									</bean>
								</entry>
							</map>
						</constructor-arg>
					</bean>
				</entry>
				<entry key="to">
					<bean class="org.jwebsocket.enterprise.plugins.itemstorage.item.MapAttributeDef" factory-method="generateDef">
						<constructor-arg index="0" value="string" />
						<constructor-arg index="1">
							<map>
								<entry key="required">
									<bean class="java.lang.Boolean">
										<constructor-arg index="0" value="true" />
									</bean>
								</entry>
							</map>
						</constructor-arg>
					</bean>
				</entry>
				<entry key="user">
					<bean class="org.jwebsocket.enterprise.plugins.itemstorage.item.MapAttributeDef" factory-method="generateDef">
						<constructor-arg index="0" value="string" />
						<constructor-arg index="1">
							<map>
								<entry key="required">
									<bean class="java.lang.Boolean">
										<constructor-arg index="0" value="true" />
									</bean>
								</entry>
							</map>
						</constructor-arg>
					</bean>
				</entry>
				<entry key="state">
					<bean class="org.jwebsocket.enterprise.plugins.itemstorage.item.MapAttributeDef" factory-method="generateDef">
						<constructor-arg index="0" value="string" />
						<constructor-arg index="1">
							<map>
								<entry key="required">
									<bean class="java.lang.Boolean">
										<constructor-arg index="0" value="true" />
									</bean>
								</entry>
							</map>
						</constructor-arg>
					</bean>
				</entry>
			</map>
		</property>
	</bean>
</beans>
